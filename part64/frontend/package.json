{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc -b --pretty false",
    "typecheck:strict": "tsc -p tsconfig.strict.json --pretty false",
    "lint": "eslint .",
    "lint:strict": "npm run typecheck:strict && eslint . --config eslint.config.strict.js --max-warnings 0",
    "test": "vitest run --exclude e2e/**",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "vitest run --coverage --exclude e2e/**",
    "test:watch": "vitest --exclude e2e/**",
    "mock:world": "node ./scripts/mock-world-server.mjs",
    "capture:dummy-render": "node ./scripts/capture-dummy-render.mjs",
    "preview": "vite preview",
    "electron:dev": "VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron ./electron/main.mjs",
    "electron:dev:watch": "VITE_DEV_SERVER_URL=http://127.0.0.1:5173 nodemon --watch electron --ext mjs,js,cjs --signal SIGTERM --exec \"electron ./electron/main.mjs\"",
    "electron:start": "electron ./electron/main.mjs",
    "electron:preview": "npm run build && npm run electron:start",
    "pm2:electron:start": "pm2 startOrRestart ./ecosystem.electron.config.cjs --only eta-mu-electron-client --update-env",
    "pm2:electron:stop": "pm2 stop eta-mu-electron-client",
    "pm2:electron:status": "pm2 status eta-mu-electron-client",
    "pm2:electron:delete": "pm2 delete eta-mu-electron-client"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "electron": "^37.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sonarjs": "^4.0.0",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
