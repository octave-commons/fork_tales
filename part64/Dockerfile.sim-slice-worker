FROM debian:bookworm-slim

RUN apt-get update \
    && apt-get install -y --no-install-recommends gcc libc6-dev libhiredis-dev ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /worker

COPY code/world_web/sim_slice_budget_worker.c /worker/sim_slice_budget_worker.c

RUN gcc -O2 -Wall -Wextra -std=c11 /worker/sim_slice_budget_worker.c -lhiredis -o /usr/local/bin/sim-slice-budget-worker

CMD ["sim-slice-budget-worker"]
